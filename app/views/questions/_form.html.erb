<div class="panel large-10">
  <%= form_for(@question) do |f| %>
    <%= f.error_messages %>
    <%= f.label :ask %>
    <%= f.text_field :ask %></br>

    <%= f.label :detail %>
    <%= f.text_field :detail %>

    <%= f.label :answer %>
    <%= f.text_field :answer %>

    <%= f.submit :class => "button" %>
  <% end %>


</div>